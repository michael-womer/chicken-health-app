{
  "compilerOptions": {
    "target": "es6",                             // ECMAScript target version
    "module": "commonjs",                        // Module system to use
    "lib": ["esnext"],                           // Latest ECMAScript features
    "strict": true,                              // Enable strict type checking
    "esModuleInterop": true,                     // Enable compatibility for ES modules
    "skipLibCheck": true,                        // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,    // Ensure consistent file naming
    "resolveJsonModule": true,                   // Allow importing JSON files
    "outDir": "./build",                         // Output directory for compiled files
    "rootDir": "./src",                          // Root directory for source files
    "baseUrl": ".",                              // Base directory for non-relative module imports
    "paths": {
      "@components/*": ["src/components/*"],     // Example path alias for components
      "@utils/*": ["src/utils/*"]                 // Example path alias for utils
    }
  },
  "include": [
    "src/**/*"                                   // Include all TypeScript files in the `src` directory
  ]
}