{
  "extends": "./tsconfig.base.json",             // Extend from base config
  "compilerOptions": {
    "outDir": "./build",                         // Override the output directory
    "sourceMap": true                            // Enable source maps
  },
  "include": [
    "src/**/*",                                  // Include all files in the `src` folder
    "tests/**/*"                                 // Include all files in the `tests` folder
  ],
  "exclude": [
    "node_modules",                              // Exclude `node_modules` folder
    "build"                                      // Exclude the `build` folder
  ]
}